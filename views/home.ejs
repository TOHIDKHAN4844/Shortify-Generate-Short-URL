<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
</head>
<body>
    <h1>Hey This is Server Side</h1>
    <h2>URL Shortener</h2>

    <% if (locals.id) { %>
        <p>URL Generate: http://localhost/8001/url/<%= id %> </p>
    <% } %>

    <div>
        <form method="POST" action="/url">
            <label for="">Enter Your Org. URL</label>
            <input 
                type="text"
                name="url"
                placeholder="https://example.com"
            >
            <button type="submit">Generate</button>
        </form>
    </div>

    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>Serial No.</th>
                        <th>ShortID</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><%= url.redirectUrl %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>
